<section id="portfolio" class="py-24 relative overflow-hidden bg-gradient-to-b from-blue-700 to-purple-800">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <h2 class="text-5xl font-extrabold text-center mb-16 text-white relative" data-aos="fade-up">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-200 to-purple-200">Showcase</span>
      <div class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-gradient-to-r from-blue-200 to-purple-200"></div>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
      <% const portfolioItems = [
        {
          title: "Dev Agency",
          description: "A professional website for a development agency showcasing services and portfolio.",
          video: "/videos/design1.mp4",
          thumbnail: "/TN/TN1.png",
          github: "https://github.com/0xMesto/blitzlaunchpad-website",
          tech: ["Tailwind CSS", "Node.js", "web development", "agency", "portfolio"]
        },
        {
          title: "SaaS and Cloud",
          description: "A cloud-based SaaS application with scalable architecture and user management.",
          video: "/videos/design2.mp4",
          thumbnail: "/TN/TN2.png",
          github: "https://github.com/0xMesto/CloudSync",
          tech: ["Tailwind CSS", "Node.js", "SaaS", "cloud computing", "scalability", "user-friendly"]
        },
        {
          title: "E-commerce App Landing Page",
          description: "A compelling landing page for an e-commerce mobile application to drive downloads.",
          video: "/videos/design3.mp4",
          thumbnail: "/TN/TN3.png",
          github: "https://github.com/0xMesto/StyleHaven",
          tech: ["Tailwind CSS", "Node.js", "e-commerce", "fashion", "e-commerce", "style"]
        },
        {
          title: "Fresh Style",
          description: "A modern and stylish  website",
          video: "/videos/design4.mp4",
          thumbnail: "/TN/TN4.png",
          github: "https://github.com/0xMesto/PlaySphere",
          tech: ["Tailwind CSS", "Node.js"]
        },
        {
          title: "Cryptocurrency Exchange",
          description: "A secure and user-friendly platform for trading various cryptocurrencies with real-time market data.",
          video: "/videos/design5.mp4",
          thumbnail: "/TN/TN5.png",
          github: "https://github.com/0xMesto/CryptoGuard",
          tech: ["Tailwind CSS", "Node.js", "cryptocurrency", "exchange", "trading"]
        },
        {
          title: "Simple && Fast",
          description: "A minimalist and high-performance web application focused on speed and simplicity.",
          video: "/videos/design6.mp4",
          thumbnail: "/TN/TN6.png",
          github: "https://github.com/0xMesto/ScentScape",
          tech: ["Tailwind CSS", "Node.js", "performance", "minimalism", "speed"]
        }
      ] %>
      <% portfolioItems.forEach((item, index) => { %>
        <div class="bg-white bg-opacity-10 rounded-2xl overflow-hidden shadow-lg transition-all duration-300 hover:transform hover:-translate-y-4 hover:scale-105 hover:shadow-2xl backdrop-filter backdrop-blur-lg" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
          <div class="relative h-80 group overflow-hidden">
            <img src="<%= item.thumbnail %>" alt="<%= item.title %>" class="w-full h-full object-cover transition-all duration-300 group-hover:scale-110 group-hover:blur-md">
            <video src="<%= item.video %>" class="absolute inset-0 w-full h-full object-cover opacity-0 transition-all duration-300 group-hover:opacity-100 group-hover:scale-125" muted loop></video>
            <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black opacity-0 group-hover:opacity-80 transition-opacity duration-300 flex items-center justify-center">
              <span class="text-white text-xl font-bold px-6 py-3 bg-blue-600 bg-opacity-80 rounded-full transform scale-0 group-hover:scale-100 transition-transform duration-300">Watch Preview</span>
            </div>
          </div>
          <div class="p-6 bg-gradient-to-b from-blue-900 to-purple-900">
            <h3 class="text-2xl font-bold text-white mb-2"><%= item.title %></h3>
            <p class="text-gray-300 mb-4"><%= item.description %></p>
            <div class="flex flex-wrap gap-2 mb-4">
              <% item.tech.forEach(tech => { %>
                <span class="bg-blue-500 bg-opacity-20 text-blue-300 text-xs font-semibold px-2 py-1 rounded-full"><%= tech %></span>
              <% }) %>
            </div>
            <a href="<%= item.github %>" target="_blank" class="group inline-flex items-center justify-center w-full px-4 py-2 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-lg hover:from-blue-600 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 overflow-hidden relative">
              <span class="absolute inset-0 bg-white opacity-0 group-hover:opacity-20 transition-opacity duration-300"></span>
              <i class="fab fa-github mr-2 transform group-hover:rotate-360 transition-transform duration-500"></i>
              <span class="relative z-10">View on GitHub</span>
              <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <div class="absolute inset-0 bg-pattern opacity-10"></div>
</section>

<style>
  .bg-pattern {
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%239C92AC' fill-opacity='0.4'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }

  @keyframes rotate360 {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .group:hover .group-hover\:rotate-360 {
    animation: rotate360 1s linear infinite;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const portfolioItems = document.querySelectorAll('#portfolio .group');

    portfolioItems.forEach(item => {
      const video = item.querySelector('video');
      const img = item.querySelector('img');

      item.addEventListener('mouseenter', () => {
        video.play();
        img.style.filter = 'blur(8px)';
      });

      item.addEventListener('mouseleave', () => {
        video.pause();
        video.currentTime = 0;
        img.style.filter = 'blur(0)';
      });
    });

    AOS.init({
      duration: 1000,
      once: true,
      offset: 100
    });
  });
</script>
