<section id="process" class="bg-gradient-to-r from-purple-800 to-blue-700 py-32 relative overflow-hidden">
  <div class="container mx-auto px-8 sm:px-12 lg:px-16 relative z-10">
    <h2 class="text-5xl font-extrabold text-center mb-20 text-white relative" data-aos="fade-up">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-300 to-purple-300">My Process</span>
      <div class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 w-32 h-1 bg-gradient-to-r from-blue-300 to-purple-300"></div>
    </h2>

    <div class="relative max-w-4xl mx-auto">
      <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-1 bg-blue-400 opacity-30"></div>
      
      <% const steps = [
        { 
          title: "Discovery & Consultation", 
          description: "We'll discuss your goals, target audience, and project requirements to ensure we're on the same page.",
          icon: "fas fa-comments",
          lottie: "https://assets5.lottiefiles.com/packages/lf20_swnrn2oy.json",
          details: ["In-depth project analysis", "Goal setting", "Target audience identification"]
        },
        { 
          title: "Strategy & Planning", 
          description: "I'll create a comprehensive plan tailored to your specific needs and objectives.",
          icon: "fas fa-sitemap",
          lottie: "https://assets3.lottiefiles.com/packages/lf20_jtbfg2nb.json",
          details: ["Content strategy", "User journey mapping", "Conversion funnel optimization"]
        },
        { 
          title: "Design & Wireframing", 
          description: "I'll craft visually appealing and user-friendly designs that align with your brand.",
          icon: "fas fa-pencil-ruler",
          lottie: "https://assets9.lottiefiles.com/packages/lf20_kuhijlvx.json",
          details: ["Responsive layouts", "UI/UX best practices", "Brand consistency"]
        },
        { 
          title: "Development", 
          description: "Your landing page will be built using the latest technologies and best practices.",
          icon: "fas fa-code",
          lottie: "https://assets2.lottiefiles.com/packages/lf20_iorpbol0.json",
          details: ["Clean, efficient code", "Cross-browser compatibility", "Performance optimization"]
        },
        { 
          title: "Testing & Optimization", 
          description: "Rigorous testing and data-driven optimizations to ensure the best possible performance.",
          icon: "fas fa-chart-line",
          lottie: "https://assets3.lottiefiles.com/packages/lf20_qp1q7mct.json",
          details: ["A/B testing", "Load time optimization", "Conversion rate optimization"]
        },
        { 
          title: "Launch & Support", 
          description: "Smooth deployment of your landing page and ongoing support to ensure its success.",
          icon: "fas fa-rocket",
          lottie: "https://assets4.lottiefiles.com/packages/lf20_9ycwmgb9.json",
          details: ["Seamless deployment", "Post-launch monitoring", "Continuous improvement"]
        }
      ] %>

      <% steps.forEach((step, index) => { %>
        <div class="flex flex-col md:flex-row items-center mb-24 relative" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
          <div class="w-full md:w-1/2 <%= index % 2 === 0 ? 'md:pr-12 md:text-right' : 'md:order-2 md:pl-12' %>">
            <div class="bg-white bg-opacity-10 backdrop-filter backdrop-blur-lg rounded-xl p-8 shadow-lg transition-all duration-300 hover:shadow-xl hover:transform hover:-translate-y-2">
              <h3 class="text-2xl font-bold text-white mb-4 flex items-center <%= index % 2 === 0 ? 'md:justify-end' : '' %>">
                <i class="<%= step.icon %> mr-3 text-blue-300"></i>
                <%= step.title %>
              </h3>
              <p class="text-blue-100 mb-6"><%= step.description %></p>
              <ul class="text-blue-200 space-y-3">
                <% step.details.forEach(detail => { %>
                  <li class="flex items-center <%= index % 2 === 0 ? 'md:justify-end' : '' %>">
                    <i class="fas fa-check-circle text-green-400 mr-2"></i>
                    <%= detail %>
                  </li>
                <% }) %>
              </ul>
            </div>
          </div>
          <div class="absolute left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-20 h-20 rounded-full bg-blue-500 flex items-center justify-center z-10 shadow-lg">
            <span class="text-white font-bold text-xl"><%= index + 1 %></span>
          </div>
          <div class="w-full md:w-1/2 <%= index % 2 === 0 ? 'md:order-2 md:pl-12' : 'md:pr-12' %>">
            <lottie-player src="<%= step.lottie %>" background="transparent" speed="1" class="w-full h-72" loop autoplay></lottie-player>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <div class="absolute inset-0 bg-gradient-to-br from-gray-900 to-blue-900 opacity-50"></div>
  <div class="absolute inset-0 bg-pattern opacity-10"></div>
</section>

<style>
  .bg-pattern {
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%239C92AC' fill-opacity='0.4'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    AOS.init({
      duration: 1000,
      once: true,
      offset: 100
    });
  });
</script>
