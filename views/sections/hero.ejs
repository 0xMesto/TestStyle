    </div>
    <div class="mt-20 text-center" data-aos="fade-up">
      <h2 class="text-2xl sm:text-3xl font-semibold mb-6">Trusted by Industry Leaders</h2>
      <div class="swiper-container">
        <div class="swiper-wrapper flex items-center justify-center">
          <div class="swiper-slide">
            <img src="https://via.placeholder.com/150x50.png?text=Logo+1" alt="Company 1" class="h-8 sm:h-10 opacity-70 hover:opacity-100 transition-opacity duration-300" />
          </div>
          <div class="swiper-slide">
            <img src="https://via.placeholder.com/150x50.png?text=Logo+2" alt="Company 2" class="h-8 sm:h-10 opacity-70 hover:opacity-100 transition-opacity duration-300" />
          </div>
          <div class="swiper-slide">
            <img src="https://via.placeholder.com/150x50.png?text=Logo+3" alt="Company 3" class="h-8 sm:h-10 opacity-70 hover:opacity-100 transition-opacity duration-300" />
          </div>
          <div class="swiper-slide">
            <img src="https://via.placeholder.com/150x50.png?text=Logo+4" alt="Company 4" class="h-8 sm:h-10 opacity-70 hover:opacity-100 transition-opacity duration-300" />
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="absolute bottom-0 left-0 w-full h-20 bg-gradient-to-t from-indigo-50 to-transparent"></div>
  <div class="absolute top-0 right-0 -mt-16 -mr-16 w-64 h-64 bg-yellow-400 rounded-full opacity-10 animate-pulse"></div>
  <div class="absolute bottom-0 left-0 -mb-16 -ml-16 w-64 h-64 bg-pink-400 rounded-full opacity-10 animate-pulse"></div>
  <lottie-player src="https://assets2.lottiefiles.com/packages/lf20_ksxp4rvx.json" background="transparent" speed="1" class="absolute bottom-0 right-0 w-64 h-64 opacity-50" loop autoplay></lottie-player>
</section>

<style>
  @keyframes blob {
    0% { transform: translate(0px, 0px) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
    100% { transform: translate(0px, 0px) scale(1); }
  }
  .animate-blob {
    animation: blob 7s infinite;
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  .animation-delay-4000 {
    animation-delay: 4s;
  }
  .btn-primary {
    @apply bg-white text-indigo-600 px-6 py-3 rounded-full text-lg font-bold hover:bg-indigo-100 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 shadow-md transform hover:scale-105 hover:-translate-y-1;
  }
  .btn-secondary {
    @apply bg-transparent border-2 border-white text-white px-6 py-3 rounded-full text-lg font-bold hover:bg-white hover:text-indigo-600 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 shadow-md transform hover:scale-105 hover:-translate-y-1;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  AOS.init({
    duration: 1000,
    once: true,
  });

  particlesJS('hero-particles', {
    particles: {
      number: { value: 80, density: { enable: true, value_area: 800 } },
      color: { value: "#ffffff" },
      shape: { type: "circle", stroke: { width: 0, color: "#000000" }, polygon: { nb_sides: 5 } },
      opacity: { value: 0.5, random: false, anim: { enable: false, speed: 1, opacity_min: 0.1, sync: false } },
      size: { value: 3, random: true, anim: { enable: false, speed: 40, size_min: 0.1, sync: false } },
      line_linked: { enable: true, distance: 150, color: "#ffffff", opacity: 0.4, width: 1 },
      move: { enable: true, speed: 6, direction: "none", random: false, straight: false, out_mode: "out", bounce: false, attract: { enable: false, rotateX: 600, rotateY: 1200 } }
    },
    interactivity: {
      detect_on: "canvas",
      events: { onhover: { enable: true, mode: "repulse" }, onclick: { enable: true, mode: "push" }, resize: true },
      modes: { grab: { distance: 400, line_linked: { opacity: 1 } }, bubble: { distance: 400, size: 40, duration: 2, opacity: 8, speed: 3 }, repulse: { distance: 200, duration: 0.4 }, push: { particles_nb: 4 }, remove: { particles_nb: 2 } }
    },
    retina_detect: true
  });

  new Typed('#hero-typed', {
    strings: ['Masterpiece', 'Experience', 'Journey'],
    typeSpeed: 50,
    backSpeed: 30,
    backDelay: 1500,
    loop: true,
    showCursor: false,
  });

  VANTA.WAVES({
    el: "#hero-vanta",
    mouseControls: true,
    touchControls: true,
    gyroControls: false,
    minHeight: 200.00,
    minWidth: 200.00,
    scale: 1.00,
    scaleMobile: 1.00,
    color: 0x4b0082,
    shininess: 35.00,
    waveHeight: 15.50,
    waveSpeed: 0.75,
    zoom: 0.65
  });

  const swiper = new Swiper('.swiper-container', {
    slidesPerView: 'auto',
    spaceBetween: 30,
    loop: true,
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
    breakpoints: {
      640: {
        slidesPerView: 2,
      },
      768: {
        slidesPerView: 3,
      },
      1024: {
        slidesPerView: 4,
      },
    },
  });

  VanillaTilt.init(document.querySelectorAll(".hover-lift"), {
    max: 25,
    speed: 400,
    glare: true,
    "max-glare": 0.5,
  });

  const heroSection = document.querySelector('section');
  window.addEventListener('scroll', () => {
    const scrollPosition = window.pageYOffset;
    heroSection.style.backgroundPositionY = `${scrollPosition * 0.5}px`;
  });

  // Add animated underline effect to buttons
  const buttons = document.querySelectorAll('.btn-primary, .btn-secondary');
  buttons.forEach(button => {
    button.addEventListener('mouseenter', () => {
      anime({
        targets: button,
        backgroundSize: ['0% 2px', '100% 2px'],
        easing: 'easeInOutQuad',
        duration: 300,
        background: 'linear-gradient(to right, #ffffff 0%, #ffffff 100%) no-repeat 0 100%',
      });
    });
    button.addEventListener('mouseleave', () => {
      anime({
        targets: button,
        backgroundSize: ['100% 2px', '0% 2px'],
        easing: 'easeInOutQuad',
        duration: 300,
      });
    });
  });

  // Add parallax effect to floating elements
  const floatingElements = document.querySelectorAll('.animate-blob');
  window.addEventListener('mousemove', (e) => {
    const { clientX, clientY } = e;
    const centerX = window.innerWidth / 2;
    const centerY = window.innerHeight / 2;
    
    floatingElements.forEach(el => {
      const dx = (clientX - centerX) / centerX;
      const dy = (clientY - centerY) / centerY;
      el.style.transform = `translate(${dx * 30}px, ${dy * 30}px)`;
    });
  });

  // Initialize Rellax for parallax scrolling effect
  new Rellax('.rellax', {
    speed: -2,
    center: false,
    wrapper: null,
    round: true,
    vertical: true,
    horizontal: false
  });

  // Add a custom cursor effect
  const cursor = document.createElement('div');
  cursor.classList.add('custom-cursor');
  document.body.appendChild(cursor);

  document.addEventListener('mousemove', (e) => {
    cursor.style.left = `${e.clientX}px`;
    cursor.style.top = `${e.clientY}px`;
  });

  document.querySelectorAll('a, button').forEach(el => {
    el.addEventListener('mouseenter', () => cursor.classList.add('cursor-hover'));
    el.addEventListener('mouseleave', () => cursor.classList.remove('cursor-hover'));
  });
});
</script>

<style>
  .custom-cursor {
    width: 20px;
    height: 20px;
    border: 2px solid white;
    border-radius: 50%;
    position: fixed;
    pointer-events: none;
    transition: all 0.1s ease;
    z-index: 9999;
  }

  .cursor-hover {
    transform: scale(1.5);
    background-color: rgba(255, 255, 255, 0.3);
  }
</style>

