<section id="about" class="bg-gradient-to-r from-purple-600 to-blue-600 py-32 relative overflow-hidden">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <h2 class="text-6xl font-extrabold text-center mb-20 text-white relative" data-aos="fade-up">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-400">Who I Am</span>
      <div class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 w-32 h-1 bg-gradient-to-r from-blue-400 to-purple-400"></div>
    </h2>

    <div class="flex flex-col lg:flex-row items-center justify-between">
      <div class="lg:w-1/2 mb-16 lg:mb-0" data-aos="fade-right">
        <div class="relative group">
          <img src="/images/my-photo.jpg" alt="Edward Alouani" class="rounded-2xl shadow-2xl w-full max-w-md mx-auto transition-transform duration-300 group-hover:scale-105 border-4 border-white">
          <div class="absolute -bottom-8 -right-8 bg-gradient-to-br from-blue-500 to-purple-500 rounded-2xl p-6 shadow-lg transform transition-transform duration-300 group-hover:translate-x-2 group-hover:-translate-y-2">
            <p class="text-white font-bold text-xl">Emerging Developer</p>
          </div>
        </div>
      </div>

      <div class="lg:w-1/2 lg:pl-16" data-aos="fade-left">
        <h3 class="text-4xl font-bold text-white mb-8 leading-tight">Passionate Landing Page Developer</h3>
        <p class="text-blue-200 mb-8 leading-relaxed text-lg">
          Hello! I'm Edward Alouani, a freelance landing page developer passionate about creating high-converting, visually stunning web experiences. My journey into web development began during my college years, where I discovered my love for blending creativity with technology.
        </p>
        <p class="text-blue-200 mb-12 leading-relaxed text-lg">
          As I work towards completing my degree, I've honed my skills in HTML, CSS, JavaScript, and various frontend frameworks. My goal is not just to build pages, but to craft digital experiences that engage users and drive results for businesses.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
          <div class="bg-white bg-opacity-10 rounded-xl p-6 transform transition-all duration-300 hover:scale-105 hover:bg-opacity-20">
            <i class="fas fa-code text-4xl text-blue-400 mb-4"></i>
            <h4 class="text-2xl font-semibold text-white mb-3">Clean Code</h4>
            <p class="text-blue-200 text-base">Efficient, maintainable, and scalable code structures.</p>
          </div>
          <div class="bg-white bg-opacity-10 rounded-xl p-6 transform transition-all duration-300 hover:scale-105 hover:bg-opacity-20">
            <i class="fas fa-paint-brush text-4xl text-purple-400 mb-4"></i>
            <h4 class="text-2xl font-semibold text-white mb-3">Creative Design</h4>
            <p class="text-blue-200 text-base">Unique, eye-catching layouts that convert.</p>
          </div>
        </div>
        <a href="#" class="scroll-to-hero inline-block bg-gradient-to-r from-blue-500 to-purple-500 text-white font-bold py-4 px-10 rounded-full transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg text-lg">Let's Connect</a>
      </div>
    </div>

    <div class="mt-32" data-aos="fade-up">
      <h3 class="text-4xl font-bold text-white text-center mb-16">My Skills</h3>
      <div class="flex justify-center flex-wrap gap-6">
        <% const skills = ['HTML5', 'CSS3', 'JavaScript', 'React', 'Vue.js', 'Angular', 'Tailwind CSS', 'Bootstrap', 'Sass', 'Node.js', 'Express.js', 'MongoDB', 'Git', 'Webpack', 'TypeScript', 'GraphQL'] %>
        <% skills.forEach(skill => { %>
          <div class="bg-white bg-opacity-10 rounded-xl p-6 text-center transform transition-all duration-300 hover:scale-110 hover:bg-opacity-20 shadow-lg w-40 h-40 flex flex-col items-center justify-center">
            <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center">
              <i class="<%= skill.toLowerCase().includes('html') ? 'fab fa-html5 text-orange-500' : 
                          skill.toLowerCase().includes('css') ? 'fab fa-css3-alt text-blue-500' :
                          skill.toLowerCase().includes('javascript') ? 'fab fa-js text-yellow-500' :
                          skill.toLowerCase().includes('react') ? 'fab fa-react text-blue-400' :
                          skill.toLowerCase().includes('vue') ? 'fab fa-vuejs text-green-500' :
                          skill.toLowerCase().includes('angular') ? 'fab fa-angular text-red-600' :
                          skill.toLowerCase().includes('node') ? 'fab fa-node-js text-green-500' :
                          skill.toLowerCase().includes('sass') ? 'fab fa-sass text-pink-500' :
                          skill.toLowerCase().includes('bootstrap') ? 'fab fa-bootstrap text-purple-500' :
                          skill.toLowerCase().includes('git') ? 'fab fa-git-alt text-orange-600' :
                          skill.toLowerCase().includes('mongodb') ? 'fas fa-database text-green-600' :
                          'fas fa-code text-purple-500' %> text-5xl"></i>
            </div>
            <p class="text-white font-semibold text-lg"><%= skill %></p>
          </div>
        <% }) %>
      </div>
    </div>
  </div>

  <div class="absolute inset-0 bg-gradient-to-br from-gray-900 to-blue-900 opacity-50"></div>
  <div class="absolute inset-0 bg-pattern opacity-10"></div>
</section>

<style>
  .bg-pattern {
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%239C92AC' fill-opacity='0.4'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    AOS.init({
      duration: 1000,
      once: true,
      offset: 100
    });

    // Add smooth scrolling to the "Let's Connect" button
    const scrollToHeroButton = document.querySelector('.scroll-to-contact');
    scrollToHeroButton.addEventListener('click', function(e) {
      e.preventDefault();
      const heroSection = document.querySelector('.contact');
      heroSection.scrollIntoView({ behavior: 'smooth' });
    });
  });
</script>
