<style>
  .services-container {
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  .services-container::-webkit-scrollbar {
    display: none;
  }
  .service-card {
    scroll-snap-align: start;
    perspective: 1000px;
    transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  }
  .service-card:hover {
    transform: translateY(-10px) rotateX(5deg) rotateY(-5deg);
  }
  .service-card-inner {
    transition: transform 0.6s;
    transform-style: preserve-3d;
  }
  .service-card:hover .service-card-inner {
    transform: rotateY(180deg);
  }
  .service-card-front, .service-card-back {
    backface-visibility: hidden;
  }
  .service-card-back {
    transform: rotateY(180deg);
  }
</style>

<section id="services" class="relative overflow-hidden py-20 bg-gradient-to-r from-purple-700 to-blue-600">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-5xl font-extrabold text-center mb-16 text-white relative" data-aos="fade-up">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-200 to-purple-200">What I Do</span>
      <div class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-gradient-to-r from-blue-200 to-purple-200"></div>
    </h2>
    <div class="services-container flex flex-nowrap justify-center space-x-6 pb-8 overflow-x-auto lg:overflow-x-visible">
      <% const services = [
        {
          title: "Landing Page Development",
          description: "Custom, responsive designs aligned with your brand and objectives.",
          icon: "https://assets2.lottiefiles.com/packages/lf20_iorpbol0.json",
          features: ["Responsive design", "Custom animations", "Cross-browser compatibility", "Performance optimization"]
        },
        {
          title: "Conversion Optimization",
          description: "A/B testing and analytics to boost your conversion rates.",
          icon: "https://assets3.lottiefiles.com/packages/lf20_qp1q7mct.json",
          features: ["A/B testing", "User behavior analysis", "Heatmap implementation", "Conversion funnel optimization"]
        },
        {
          title: "UI/UX Design",
          description: "Clean, user-friendly interfaces that captivate and convert.",
          icon: "https://assets9.lottiefiles.com/packages/lf20_kuhijlvx.json",
          features: ["Wireframing and prototyping", "User-centered design", "Intuitive navigation", "Visual hierarchy optimization"]
        },
        {
          title: "Speed Optimization",
          description: "Ensuring lightning-fast load times for optimal user experience and SEO.",
          icon: "https://assets10.lottiefiles.com/packages/lf20_xt3zjwah.json",
          features: ["Image optimization", "Minification of CSS/JS", "Lazy loading implementation", "Server-side caching"]
        },
        {
          title: "SEO-Friendly Design",
          description: "Incorporating on-page SEO best practices for enhanced visibility.",
          icon: "https://lottie.host/8464cbd6-79ea-41fe-966a-2254a311b9cd/OsbDfAKHdr.json",
          features: ["Semantic HTML structure", "Schema markup implementation", "Mobile-first indexing", "Page speed optimization"]
        }
      ] %>

      <% services.forEach((service, index) => { %>
        <div class="service-card w-80 h-[480px] flex-shrink-0" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
          <div class="service-card-inner w-full h-full">
            <div class="service-card-front bg-white bg-opacity-10 backdrop-filter backdrop-blur-lg rounded-xl shadow-lg p-6 flex flex-col items-center justify-between h-full">
              <lottie-player src="<%= service.icon %>" background="transparent" speed="1" class="w-40 h-40" loop autoplay></lottie-player>
              <div>
                <h3 class="text-2xl font-bold mt-4 mb-3 text-center text-white"><%= service.title %></h3>
                <p class="text-center text-gray-200"><%= service.description %></p>
              </div>
            </div>
            <div class="service-card-back bg-gradient-to-br from-blue-600 to-purple-600 rounded-xl shadow-lg p-6 flex flex-col items-center justify-center absolute inset-0">
              <h3 class="text-2xl font-bold mb-6 text-white"><%= service.title %></h3>
              <ul class="space-y-4">
                <% service.features.forEach((feature, featureIndex) => { %>
                  <li class="flex items-center text-white">
                    <% const icons = ['M13 10V3L4 14h7v7l9-11h-7z', 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z', 'M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4', 'M13 10V3L4 14h7v7l9-11h-7z', 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z'] %>
                    <svg class="w-6 h-6 mr-3 text-green-300 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icons[featureIndex % icons.length] %>"></path>
                    </svg>
                    <span class="text-lg"><%= feature %></span>
                  </li>
                <% }) %>
              </ul>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    AOS.init({
      duration: 1000,
      once: true,
      offset: 100
    });
  });
</script>
