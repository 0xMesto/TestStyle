  <script>
  document.addEventListener('DOMContentLoaded', () => {
    AOS.init({
      duration: 1000,
      once: true,
    });
  
    // Initialize Vanta.js background
    VANTA.WAVES({
      el: "#footer-vanta",
      mouseControls: true,
      touchControls: true,
      gyroControls: false,
      minHeight: 200.00,
      minWidth: 200.00,
      scale: 1.00,
      scaleMobile: 1.00,
      color: 0x4b0082,
      shininess: 35.00,
      waveHeight: 15.50,
      waveSpeed: 0.75,
      zoom: 0.65
    });

// Smooth scroll initialization
var scroll = new SmoothScroll('a[href*="#"]', {
  speed: 800,
  speedAsDuration: true
});

// Vanilla-tilt initialization for 3D hover effect
VanillaTilt.init(document.querySelectorAll(".hover-tilt"), {
  max: 25,
  speed: 400,
  glare: true,
  "max-glare": 0.5,
});

// Add a scroll-triggered animation for the footer
window.addEventListener('scroll', () => {
  const footer = document.querySelector('footer');
  const scrollPosition = window.innerHeight + window.pageYOffset;
  const footerPosition = footer.offsetTop;

  if (scrollPosition > footerPosition) {
    footer.classList.add('animate-fade-in-up');
  }
});

// Add a typing effect to the CardCraft text in the footer
new Typed('#footer-typed-text', {
  strings: ['CardCraft', 'Create', 'Design', 'Innovate'],
  typeSpeed: 50,
  backSpeed: 30,
  backDelay: 1500,
  loop: true,
  showCursor: false,
});
});

// Add parallax effect to footer background
window.addEventListener('scroll', () => {
const footer = document.querySelector('footer');
const scrollPosition = window.pageYOffset;
footer.style.backgroundPositionY = `${scrollPosition * 0.5}px`;
});

// Add custom cursor effect
const cursor = document.createElement('div');
cursor.classList.add('custom-cursor');
document.body.appendChild(cursor);

document.addEventListener('mousemove', (e) => {
cursor.style.left = `${e.clientX}px`;
cursor.style.top = `${e.clientY}px`;
});

document.querySelectorAll('a, button').forEach(el => {
el.addEventListener('mouseenter', () => cursor.classList.add('cursor-hover'));
el.addEventListener('mouseleave', () => cursor.classList.remove('cursor-hover'));
});
</script>

