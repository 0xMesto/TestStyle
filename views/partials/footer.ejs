        <ul class="space-y-4">
          <% ['Home', 'Portfolio', 'Services', 'Process', 'About', 'Contact'].forEach(link => { %>
            <li>
              <a href="#<%= link.toLowerCase() %>" class="text-blue-200 hover:text-white transition-colors duration-300 flex items-center group">
                <i class="fas fa-chevron-right mr-2 text-sm transition-transform duration-300 group-hover:translate-x-1"></i>
                <span class="text-lg"><%= link %></span>
              </a>
            </li>
          <% }) %>
        </ul>
      </div>
      
      <div data-aos="fade-up" data-aos-delay="200">
        <h4 class="text-2xl font-semibold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-400">Services</h4>
        <ul class="space-y-4">
          <% ['Landing Page Development', 'Conversion Optimization', 'UI/UX Design', 'Speed Optimization', 'SEO-Friendly Design'].forEach(service => { %>
            <li>
              <a href="#services" class="text-blue-200 hover:text-white transition-colors duration-300 flex items-center group">
                <i class="fas fa-check-circle mr-2 text-sm text-green-400 transition-transform duration-300 group-hover:scale-110"></i>
